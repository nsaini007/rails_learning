<%= form_with model: movie do |form| %>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        <% movie.errors.full_messages_for(:title).each do |message| %>
            <div><%= message %></div>
        <% end %>

    </div>

    <div>
        <%= form.label :body %><br>
        <%= form.text_field :body %>
        <% movie.errors.full_messages_for(:body).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :image %><br>
        <%= form.text_field :image %>
        <% movie.errors.full_messages_for(:image).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>